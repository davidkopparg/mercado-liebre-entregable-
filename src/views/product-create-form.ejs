<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación'}) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creación de productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/create" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="title" value="<%=body.title%>" name="title" placeholder="Ej: Zapatillas Reebok" class="form-input">
						<p class="errores"><%= typeof errors.title == "undefined" ? "" : errors.title.msg %></p>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price"value="<%=body.price%>"  name="price" placeholder="Ej: 5678" class="form-input">
						
					<p class="errores"><%= typeof errors.price == "undefined" ? "" : errors.price.msg %></p>
						
							
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Stock:</label>
						<input type="number" id="stock"value="<%=body.stock%>" name="stock" placeholder="Ej: 15" class="form-input">
					</div>


					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						
						<select name="category" id="category" class="form-input">
							<option value="<%=body.category%>"><%=body.category%></option>	
							<% categorias.forEach(categoria => { %>
								<option value="<%=categoria.id%>"><%=categoria.name%></option>	
							<%})%>
							
						</select>
						<p class="errores"><%= typeof errors.category == "undefined" ? "" : errors.category.msg %></p>
					</div>
					
					<div class="col-12 col-md-6">
						<label for="brand" class="form-label">Marcas:</label>
						<select name="brand" id="brand" class="form-input">
							<option value="<%=body.brand%>"><%=body.brand%></option>	
							<% marcas.forEach(marca => { %>
								<option value="<%=marca.id%>"><%=marca.name%></option>	
							<%})%>
						</select>
						<p class="errores"><%= typeof errors.brands == "undefined" ? "" : errors.brands.msg %></p>
						<div>
							<label class="form-label">Subir fotos del producto</label>
							<input value="<%=body.adjunto%>" required class="form-label" ide="file-input" multiple="multiple" type="file"
								name="adjunto" accept=".pdf,.jpg,.png">
						</div>

					</div>
					<div class="col-12">
						
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description"  id="description" class="form-input"><%=body.description%></textarea>
					</div>
					<p class="errores"><%= typeof errors.description == "undefined" ? "" : errors.description.msg %></p>
					<div class="col-12">


						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>