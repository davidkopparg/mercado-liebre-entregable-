<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + '¿?'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= product.title%></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%=product.id%>?_method=PATCH" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="title" name="title" value="<%= product.title%>" placeholder="Ej: Zapatillas Reebok" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="number" id="price" name="price" value="<%= product.price%>" placeholder="Ej: 5678" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Stock</label>
						<input type="number" id="stock" name="stock" value="<%= product.stock%>" placeholder="Ej: 15" class="form-input">
					</div>

					<div class="col-12 col-md-6">
						<label for="brand" class="form-label">Marcas:</label>
						<select name="brand" id="brand" class="form-input">
							<option value="<%=product.category.id%>"><%=product.category.name%></option>
							<% editMarcas.forEach(marca => { %>
								
								<option value="<%=marca.id%>"><%=marca.name%></option>	
							<%})%>
						</select>
	
						
					</div>
					<div>
						<label class="form-label">Subir fotos del producto</label>
						<input class="form-label" ide="file-input" multiple="multiple" type="file"
							name="adjunto" accept=".pdf,.jpg,.png">
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= product.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>